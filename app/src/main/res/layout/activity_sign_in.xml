<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/bg_light"
    tools:context=".ui.auth.SignInActivity">

    <ImageView
        android:layout_marginTop="@dimen/margin_large"
        android:src="@drawable/ic_gorent_logo"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

<!--    <TextView-->
<!--        android:text="@string/title_sign_in"-->
<!--        android:textSize="@dimen/title_size"-->
<!--        android:layout_gravity="center"-->
<!--        android:textColor="@color/main_dark"-->
<!--        android:layout_marginTop="@dimen/margin_medium"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"/>-->

    <TextView
        android:layout_marginTop="@dimen/margin_medium"
        android:text="@string/prompt_email"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <EditText
        android:id="@+id/edit_login"
        android:background="@drawable/edit_text_bg"
        android:layout_marginTop="@dimen/margin_small"
        android:minWidth="@dimen/field_min_width"
        android:layout_gravity="center"
        android:gravity="center"
        android:inputType="textEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="@dimen/margin_medium"
        android:text="@string/prompt_password"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edit_password"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@drawable/edit_text_bg"
        android:layout_gravity="center"
        android:gravity="center"
        android:minWidth="@dimen/field_min_width"
        android:inputType="textPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:minWidth="@dimen/field_min_width"
        android:orientation="horizontal"
        android:showDividers="middle"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/action_remember_me"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_remember_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="start"
            android:gravity="end" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_action_forgot_password"
        android:text="@string/action_forgot_password"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_gravity="center"
        android:textColor="@color/secondary_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_sign_in"
        android:layout_marginTop="@dimen/margin_medium"
        android:minWidth="@dimen/button_min_width"
        android:layout_gravity="center"
        android:text="@string/action_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_sign_up"
        android:backgroundTint="@color/main_light"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_gravity="center"
        android:minWidth="@dimen/button_min_width"
        android:text="@string/action_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/temp_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>