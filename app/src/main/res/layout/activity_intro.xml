<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_intro"
    android:theme="@style/ThemeOverlay.GoRent.FullscreenContainer"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:gravity="start"
    tools:context=".IntroActivity">

    <ImageView
        android:id="@+id/main_logo"
        android:src="@drawable/ic_gorent_logo"
        android:layout_marginTop="@dimen/margin_logo"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_connection"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ProgressBar
        android:id="@+id/prgrss_bar_connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_medium"
        android:indeterminateTint="@color/secondary_dark"/>

    <Button
        android:id="@+id/btn_try_connect"
        android:text="@string/action_try_again"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_medium"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>